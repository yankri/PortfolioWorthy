

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FandomTV</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Alegreya+Sans:400,800italic,700italic,900' rel='stylesheet' type='text/css'>
</head>
<body>
    <nav id="navbar" class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="brand" class="navbar-brand" href="@Url.Action("Index","Home")">fandomTV</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="navbar-right">
                    <form action="@Url.Action("Search","Home")" method="get">
                        <input id="search" type="text" name="searchterms"/>
                        <input class="btn" type="submit" value="Search titles..."/>
                    </form>
                </div>
                
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a id="browse" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Browse <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a class="browsemenu" href="@Url.Action("BrowseByGenre", "Home")">By Genre</a></li>
                            <li><a class="browsemenu" href="@Url.Action("BrowseByNetwork", "Home")">By Network</a></li>
                            <li><a class="browsemenu" href="@Url.Action("BrowseAtoZ", "Home")">A to Z</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderBody()


</body>
</html>     