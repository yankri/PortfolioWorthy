@model IEnumerable<MiniHulu.Models.TVShow>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css" />
<link href="~/Content/Homepage.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="/slick.css" />
<link rel="stylesheet" type="text/css" href="/slick-theme.css" />

@{
    ViewBag.Title = "Home";
}

@{
    string thumbnail1 = Model.First(x => x.Title == "Supernatural").CoverImage.ToString();
    string thumbnail2 = Model.First(x => x.Title == "Game of Thrones").CoverImage.ToString();
    string thumbnail3 = Model.First(x => x.Title == "Sherlock").CoverImage.ToString();
}

<body>
    <div class="content">
        <div class="center">
            @foreach (var item in Model)
            {
                <div><a href="@Url.Action("EpisodeBrowseByShow", "Home", new { id = item.ShowID })">
                    <img class="image" src="@Html.DisplayFor(modelItem => item.CoverImage)" alt="..." height="400"></a></div>
            }
        </div>
    </div>

    <div id="thumbnails" class="container">
        <div class="row">
            <h1>Featured</h1>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@thumbnail1" height="350" width="350">
                    <div class="caption">
                        <h3>Supernatural</h3>
                        <p><a href="@Url.Action("EpisodeBrowseByShow", "Home", new { id = 11 })" class="btn btn-primary" role="button">Watch Now</a></p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@thumbnail2" height="350" width="350" alt="...">
                    <div class="caption">
                        <h3>Game of Thrones</h3>
                        <p><a href="@Url.Action("EpisodeBrowseByShow", "Home", new { id = 1 })" class="btn btn-primary" role="button">Watch Now</a></p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@thumbnail3" height="350" width="350">
                    <div class="caption">
                        <h3>Sherlock</h3>
                        <p><a href="@Url.Action("EpisodeBrowseByShow", "Home", new { id = 12 })" class="btn btn-primary" role="button">Watch Now</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/slick.min.js"></script>
    <script type="text/javascript" src="~/Content/slickcarousel.js"></script>

</body>
