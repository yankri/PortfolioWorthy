@model IEnumerable<MiniHulu.Models.TVShow>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/ShowBrowsePages.css" type="text/css" rel="stylesheet" />
<body>
    <div class="container">
        <div class="row">
            @if (Model.Count() == 0)
            {
                <h1>No results matched your search.</h1>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4">
                        <div id="networkshows" class="thumbnail">
                            <img src="@item.CoverImage" alt="...">
                            <div class="caption">
                                <h3>@item.Title</h3>
                                <p>@item.Summary</p>
                                <p><a href="@Url.Action("EpisodeBrowseByShow", "Home", new { id = item.ShowID })" class="btn btn-primary" role="button">Watch Now</a></p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>
