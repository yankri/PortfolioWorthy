@model IEnumerable<DateNightCle.Models.DateNight>

@{
    ViewBag.Title = "Index";
}

<link href='https://fonts.googleapis.com/css?family=Dosis:400,800' rel='stylesheet' type='text/css'>

<h1>
    Date Night
    <br /><span id="cle">CLEVELAND</span>
</h1>

<p id="createlink">
    @Html.ActionLink("Submit An Idea", "Create")
</p>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Html.DisplayFor(modelItem => item.PhotoURL)" alt="..." height="100" width="100">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p>When: @Html.DisplayFor(modelItem => item.Date)</p>
                    <p>Where: @Html.DisplayFor(modelItem => item.Address)</p>
                    <p>Contact: @Html.DisplayFor(modelItem => item.PhoneNum)</p>
                    <p>@Html.DisplayFor(modelItem => item.Website)</p>
                    <p>Cost: @Html.DisplayFor(modelItem => item.PricePerPerson)</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                </div>
            </div>
        </div>
        @Html.ActionLink("Edit", "Edit", new { id = item.RecordNum }) |
        @Html.ActionLink("Details", "Details", new { id = item.RecordNum }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RecordNum })
    </div>


}
