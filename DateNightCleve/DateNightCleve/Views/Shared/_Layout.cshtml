<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Dosis:400,800' rel='stylesheet' type='text/css'>
    <title>@ViewBag.Title - DateNightCLE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav id ="navbar" class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","DateNights")">
                    <h1>
                        Date Night
                        <br /><span id="cle">CLEVELAND</span>
                    </h1>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="form-group navbar-right">
                    <form id="searchform" action="@Url.Action("Search", "DateNights")" method="get">
                        <input id="searchbox" type="text" class="form-control" name="searchterms" placeholder="Search dates...">
                        <button id="layoutbtn" type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
                <ul id="menu" class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Create", "DateNights")" >Submit an Idea</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Browse<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("BrowseByCategory", "DateNights")">By Category</a></li>
                            <li><a href="@Url.Action("BrowseByPrice", "DateNights")">By Cost</a></li>
                            <li><a href="@Url.Action("BrowseByDate", "DateNights")">By Date</a></li>
                        </ul>
                    </li>
                </ul>
                
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
