@model IEnumerable<DateNightCleve.Models.DateNight>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Homepage.css" rel="stylesheet" type="text/css" />
<body>
    <div class="container">
        @if (Model.Count() == 0)
        {
            <h1>Your search didn't return any results :( </h1>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@item.PhotoURL" alt="...">
                        <div class="caption">
                            <h3>@item.Title</h3>
                            <p>Category: @item.Category</p>
                            <p>When: @item.Date</p>
                            <p>Where: @item.Address</p>
                            <p>Contact: @item.PhoneNum</p>
                            <p>Cost: $@item.PricePerPerson per person</p>
                            <p><a href="@item.Website">Website</a></p>
                            <p><a href="@Url.Action("Details", "DateNights", new { id = item.RecordNum })" class="btn btn-primary" role="button">Browse @item.Category</a></p>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</body>
