@model IEnumerable<DateNightCleve.Models.DateNight>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Browse by Category";
    var browsebycategory = Model.Select(x => new { x.Category, x.PhotoURL, x.RecordNum });
    var distinctCategories = browsebycategory.GroupBy(x => x.Category).Select(x => x.First());
}
<link href="~/Content/BrowseBy.css" rel="stylesheet" type="text/css"/>

<body>
    <div class="container">
            @foreach (var item in distinctCategories)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@item.PhotoURL" height="232" width="350">
                        <div class="caption">
                            <h3>@item.Category</h3>
                            <p><a href="@Url.Action("ListOfShows", "DateNights", new { id = item.Category })" class="btn btn-primary" role="button">Browse @item.Category</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
</body>

